<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
        <!--toolbar内的控件（自定义的或者系统预置的如标题）距离NavigationIcon和屏幕左边的距离，类似marginStart-->

    </style>

    <style name="mToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
    </style>

    <!--标题栏的样式-->
    <style name="BaseToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">4dp</item>
        <item name="contentInsetStartWithNavigation">4dp</item>
        <!--使自定义view可以贴左右的边，多数版本的系统不要下面两句也可以，但少量版本必须加下面的两句-->

        <item name="android:paddingLeft">@dimen/toolbar_left_margin</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:id">@id/base_toolbar</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TranThem" parent="AppTheme.ToolbarHeight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/trans_t</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <!--这里设置 标题栏的颜色-->
        <item name="android:id">@id/app_bar_layout</item>
    </style>

    <style name="ToolBarNavTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:id">@id/toolbar_nav_text</item>
    </style>

    <style name="ToolBarRightActionStyle" parent="ToolBarTitleStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:textColor">@drawable/toolbar_title_determine_textcolor</item>
        <item name="android:textSize">@dimen/title_right</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ToolBarNavTextStyle.Not">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.ToolbarHeight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarNavigationButtonStyle">@style/mToolbarNavigationButtonStyle</item>
        <!--NavigationIcon的宽度-->
        <item name="toolbarStyle">@style/BaseToolbarStyle</item>
    </style>

    <style name="AppTheme.NotToolbarHeight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainStyle" parent="AppTheme.ToolbarHeight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="DialogTextStyle" parent="AppTheme.ToolbarHeight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DialogCallActionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#03a4f9</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="MapNavigationSelectTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="settint_item_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">?android:attr/selectableItemBackground</item>-->
        <item name="android:background">#fff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ToolBarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/toolbar_title_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:id">@id/tv_toolbar_title</item>
    </style>

    <style name="SettingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="arror_setting">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DialogStyle" parent="AlertDialog.AppCompat">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogStyle.Helper" parent="AlertDialog.AppCompat.Light">
        <!--<item name="android:background">@color/white</item>-->
        <!--<item name="android:textColor">@color/black</item>-->
        <!--<item name="colorAccent">#03a9f4</item>-->
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#4CAF50</item>
    </style>

    <style name="ShareAppLainearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShareAppImageStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="ShareAppTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--所有基础页面布局的样式-->

    <style name="BaseRootLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>
</resources>
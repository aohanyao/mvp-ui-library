<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@drawable/dialog_bottom_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="@dimen/dp_8"
    tools:showIn="@layout/dialog_select_date_layout">

    <com.td.framework.ui.wheel.vertical.LoopView
        android:id="@+id/loopView_year"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        app:awv_centerTextColor="0xff1d9ff0"
        app:awv_dividerTextColor="0xffd6d6d6"
        app:awv_itemsVisibleCount="11"
        app:awv_outerTextColor="0xff1d9ff0"
        app:awv_textsize="20"
        />

    <com.td.framework.ui.wheel.vertical.LoopView
        android:id="@+id/loopView_month"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:awv_centerTextColor="0xff1d9ff0"
        app:awv_dividerTextColor="0xffd6d6d6"
        app:awv_itemsVisibleCount="11"
        app:awv_outerTextColor="0xff1d9ff0"
        app:awv_textsize="20"
        />

    <com.td.framework.ui.wheel.vertical.LoopView
        android:id="@+id/loopView_day"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:awv_centerTextColor="0xff1d9ff0"
        app:awv_dividerTextColor="0xffd6d6d6"
        app:awv_itemsVisibleCount="11"
        app:awv_outerTextColor="0xff1d9ff0"
        app:awv_textsize="20"
        />
</LinearLayout>